{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*"]
    },
    "sourceMap": true
  },
  "include": ["src/**/*", "src/global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
